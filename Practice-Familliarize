-- Create table
CREATE TABLE dojob (
    name VARCHAR(50), -- Maximum amount of characters in the name is 50
    location VARCHAR(100) -- Maximum amount of characters in the location is 100
);

-- Insert data into the 'dojob' table
INSERT INTO dojob (name, location) VALUES
    ('this one', 'a'),
    ('that one', 'b'),
    ('other one', 'c'),
    ('another one', 'd');

-- Select the first three names and locations from the 'dojob' table
SELECT name
FROM dojob
LIMIT 3;
